<!-- FORM TO CREATE A NEW ARTICLE -->
<div class="center marginbottom">
	<h1>Article</h1>


	<form method="post" action="/articles/new/post">
		<h3 class="new_cat">Create NEW Article</h3>
		<br>
		<label class="margintop">Name of Article</label>
		<br>
		<input class="others" name="name" type="text">
		<br>
		<label>Site URL</label>
		<br>
		<input class="others" name="site" type="text">
		<br>
		<label>Picture URL</label>
		<br>
		<input class="others" name="picture" type="text">
		<br>
		<label>Category</label>
		<br>
		<select name="categories_1" class="others"> 
			<% @categories.each do |category| %>
			<option value="<%= category["id"]%>" ><%= category["name"]%> </option>
			<%end%>
		</select>
		<br>
		<br>
		<label>Content</label>
		<br>
		<textarea name="content" placeholder="Insert your article here. Optional: use markdown formatting."></textarea>
		<br>
		<input class="button" type="submit" value="Add new Article">
	</form>


</div>

